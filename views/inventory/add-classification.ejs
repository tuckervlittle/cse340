<!-- Heading -->
<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') }%>

    <%- messages() %>

  <% if (errors) { %>
    <ul class="error">
    <% errors.array().forEach(error=> { %>
      <li><%= error.msg %></li>
  <% }) %>
    </ul>
  <% } %>
    
    <div id="form-div">
      <h2>Field is Required</h2>
      <form id="classification-form" action="./management" method="post">
    
        <label for="classification_name" class="input">Classification Name:
          <p class="instructions">*Name must be alphabetic characters only, no spaces.</p>
          <input id="classification_name" type="text" name="classification_name" pattern="^[A-Za-z]{3,}$" required value="lolipop"
            autocomplete="given-name">
        </label>
        <button id="form-button" type="submit">Add Classification</button>

      </form>